{
  "name": "flowind-design-system",
  "private": false,
  "version": "1.0.6",
  "type": "module",
  "description": "A comprehensive design system built with Svelte, Tailwind CSS, and Flowbite components",
  "keywords": [
    "svelte",
    "design-system",
    "tailwind",
    "flowbite",
    "components",
    "ui"
  ],
  "author": "Flowind Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mickael-h/flowind.git"
  },
  "bugs": {
    "url": "https://github.com/mickael-h/flowind/issues"
  },
  "homepage": "https://github.com/mickael-h/flowind#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.js",
      "types": "./dist/styles/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite dev --host 0.0.0.0",
    "build": "npm run build:components && npm run build:styles",
    "build:components": "svelte-package --input src/lib/components/ui --output dist",
    "build:styles": "vite build --config vite.styles.config.ts",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "flowbite-svelte": "^1.12.0",
    "svelte": "^5.0.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-svelte-csf": "^5.0.7",
    "@storybook/addon-vitest": "^9.1.2",
    "@storybook/sveltekit": "^9.1.2",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/package": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22",
    "@vitest/browser": "^3.2.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-storybook": "^9.1.2",
    "eslint-plugin-svelte": "^3.0.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.0.0",
    "playwright": "^1.53.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "^9.1.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.3",
    "vitest-browser-svelte": "^0.1.0"
  }
}
